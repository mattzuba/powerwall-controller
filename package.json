{
  "name": "powerwall-controller",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd src/api && npm install && cd ../frontend && npm install",
    "lint": "semistandard ./src/**/*.js",
    "invoke": "npm run build && sam local invoke",
    "start": "run-p start:*",
    "start:api": "sam local start-api",
    "start:frontend": "cd ./src/frontend && npm run serve",
    "build": "run-p build:*",
    "build:api": "webpack",
    "build:frontend": "cd ./src/frontend && npm run build",
    "deploy": "sam deploy --resolve-s3 --no-confirm-changeset --no-fail-on-empty-changeset"
  },
  "author": "",
  "license": "BSD-3-clause",
  "devDependencies": {
    "@aws-amplify/cli": "^5.1.0",
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.14",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.2",
    "@babel/plugin-proposal-throw-expressions": "^7.12.13",
    "@babel/preset-env": "^7.13.12",
    "@vue/cli": "^4.5.13",
    "aws-sam-webpack-plugin": "^0.9.0",
    "babel-loader": "^8.2.2",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "semistandard": "^16.0.0",
    "webpack": "^4.46.0",
    "webpack-command": "^0.5.1"
  }
}
